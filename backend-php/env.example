# 应用配置
APP_DEBUG=true
APP_TRACE=false

# 数据库配置
DATABASE_TYPE=mysql
DATABASE_HOST=127.0.0.1
DATABASE_PORT=3306
DATABASE_NAME=kangli_digital
DATABASE_USERNAME=root
DATABASE_PASSWORD=your_password
DATABASE_PREFIX=
DATABASE_CHARSET=utf8mb4

# Redis配置
REDIS_HOST=127.0.0.1
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_SELECT=0

# 阿里云OSS配置
OSS_ACCESS_KEY_ID=your_aliyun_access_key_id
OSS_ACCESS_KEY_SECRET=your_aliyun_access_key_secret
OSS_ENDPOINT=oss-cn-shanghai.aliyuncs.com
OSS_BUCKET=kangli-digital
OSS_CDN_DOMAIN=https://cdn.kangli-digital.com
OSS_IS_CNAME=false

# JWT配置
JWT_SECRET=your_jwt_secret_key_change_this_in_production
JWT_EXPIRE=7200
JWT_ISS=kangli-digital

# 跨域配置
CORS_ALLOW_ORIGIN=*
CORS_ALLOW_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_ALLOW_HEADERS=Authorization,Content-Type,X-Requested-With

# 管理后台
ADMIN_TOKEN_EXPIRE=86400

# 文件上传
UPLOAD_MAX_SIZE=10485760
UPLOAD_ALLOWED_EXT=jpg,jpeg,png,gif,mp4,pdf,doc,docx

# 日志配置
LOG_TYPE=file
LOG_PATH=./runtime/log/

